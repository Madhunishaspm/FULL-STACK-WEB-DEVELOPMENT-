import React, { useState } from "react";
import "./App.css";

function App() {
  const [formData, setFormData] = useState({
    name: "",
    rating: "",
    comment: "",
  });

  const [submitted, setSubmitted] = useState(false);

  const handleChange = (e) => {
    setFormData({
      ...formData,
      [e.target.name]: e.target.value,
    });
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    setSubmitted(true);
  };

  return (
    <div className="container">
      <div className="form-card">
        <h1>üí¨ Feedback Form</h1>

        <form onSubmit={handleSubmit}>
          <input
            type="text"
            name="name"
            placeholder="Your Name"
            required
            onChange={handleChange}
          />

          <select name="rating" required onChange={handleChange}>
            <option value="">Rate Us</option>
            <option>‚≠ê Excellent</option>
            <option>‚≠ê‚≠ê Good</option>
            <option>‚≠ê‚≠ê‚≠ê Average</option>
            <option>‚≠ê‚≠ê‚≠ê‚≠ê Poor</option>
          </select>

          <textarea
            name="comment"
            placeholder="Your Feedback"
            required
            onChange={handleChange}
          ></textarea>

          <button type="submit">Submit Feedback</button>
        </form>
      </div>

      {submitted && (
        <div className="output-card">
          <h2>üìã Submitted Feedback</h2>
          <p><strong>Name:</strong> {formData.name}</p>
          <p><strong>Rating:</strong> {formData.rating}</p>
          <p><strong>Comment:</strong> {formData.comment}</p>
        </div>
      )}
    </div>
  );
}

export default App;



