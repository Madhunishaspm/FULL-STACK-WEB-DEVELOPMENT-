import React, { useState } from "react";
import "./App.css";


function App() {
  const [formData, setFormData] = useState({
    name: "",
    email: "",
    workshop: "",
    participants: 1,
    date: "",
  });


  const [errors, setErrors] = useState({});
  const [submitted, setSubmitted] = useState(false);


  // Handle input changes
  const handleChange = (e) => {
    const { name, value } = e.target;
    setFormData({ ...formData, [name]: value });
  };


  // Validate form
  const validate = () => {
    let tempErrors = {};
    if (!formData.name) tempErrors.name = "Name is required.";
    if (!formData.email) tempErrors.email = "Email is required.";
    else if (!/\S+@\S+\.\S+/.test(formData.email)) tempErrors.email = "Email is invalid.";
    if (!formData.workshop) tempErrors.workshop = "Select a workshop.";
    if (!formData.date) tempErrors.date = "Date is required.";
    if (!formData.participants || formData.participants <= 0)
      tempErrors.participants = "Participants must be at least 1.";


    setErrors(tempErrors);
    return Object.keys(tempErrors).length === 0;
  };


  // Handle form submission
  const handleSubmit = (e) => {
    e.preventDefault();
    setSubmitted(false);
    if (validate()) {
      setSubmitted(true);
      alert(`Registration successful for ${formData.name}!`);
    }
  };


  return (
    <div className="container">
      <h1>Workshop Registration</h1>
      <form onSubmit={handleSubmit} className="registration-form">
        <label>
          Name:
          <input type="text" name="name" value={formData.name} onChange={handleChange} />
          {errors.name && <span className="error">{errors.name}</span>}
        </label>


        <label>
          Email:
          <input type="email" name="email" value={formData.email} onChange={handleChange} />
          {errors.email && <span className="error">{errors.email}</span>}
        </label>


        <label>
          Workshop:
          <select name="workshop" value={formData.workshop} onChange={handleChange}>
            <option value="">-- Select --</option>
            <option value="React Basics">React Basics</option>
            <option value="Node.js">Node.js</option>
            <option value="AWS Cloud">AWS Cloud</option>
          </select>
          {errors.workshop && <span className="error">{errors.workshop}</span>}
        </label>


        <label>
          Participants:
          <input
            type="number"
            name="participants"
            value={formData.participants}
            onChange={handleChange}
            min={1}
          />
          {errors.participants && <span className="error">{errors.participants}</span>}
        </label>


        <label>
          Date:
          <input type="date" name="date" value={formData.date} onChange={handleChange} />
          {errors.date && <span className="error">{errors.date}</span>}
        </label>


        <button type="submit">Register</button>
      </form>


      <div className="preview">
        <h2>Live Preview</h2>
        <p><strong>Name:</strong> {formData.name}</p>
        <p><strong>Email:</strong> {formData.email}</p>
        <p><strong>Workshop:</strong> {formData.workshop}</p>
        <p><strong>Participants:</strong> {formData.participants}</p>
        <p><strong>Date:</strong> {formData.date}</p>
      </div>


      {submitted && (
        <div className="success-message">
          Registration successful for {formData.name} in the {formData.workshop} workshop!
        </div>
      )}
    </div>
  );
}


export default App;


