}

.quiz-container {
  width: 400px;
  text-align: center;
  font-family: Arial, sans-serif;
  padding: 20px;
  border: 2px solid #333;
  border-radius: 10px;
  background-color: white;
}

.options button {
  display: block;
  width: 100%;
  margin: 10px 0;
  padding: 10px;
  cursor: pointer;
}

.options button:hover {
  background-color: #4caf50;
  color: white;
}






                                           
