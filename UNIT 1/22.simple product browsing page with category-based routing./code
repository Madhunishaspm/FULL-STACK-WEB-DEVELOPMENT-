App.jsx
import React, { useState } from "react";
import "./App.css";


function App() {
  const [category, setCategory] = useState("home");


  const products = {
    electronics: ["Laptop", "Mobile", "Headphones"],
    fashion: ["T-Shirt", "Jeans", "Jacket"],
    books: ["JavaScript", "React Guide", "Web Development"]
  };


  return (
    <div className="app">
      <nav className="navbar">
        <h2>Categories</h2>
        <button onClick={() => setCategory("home")}>Home</button>
        <button onClick={() => setCategory("electronics")}>Electronics</button>
        <button onClick={() => setCategory("fashion")}>Fashion</button>
        <button onClick={() => setCategory("books")}>Books</button>
      </nav>


      <div className="content">
        {category === "home" && (
          <div className="card">
            <h2>Welcome to Product Store ðŸ›’</h2>
            <p>Select a category to browse products.</p>
          </div>
        )}


        {category !== "home" && (
          <div className="card">
            <h2>{category.toUpperCase()}</h2>
            <ul>
              {products[category].map((item, index) => (
                <li key={index}>{item}</li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </div>
  );
}


export default App;




